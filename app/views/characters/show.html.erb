<h2><%= @character.name %></h2>
<div class='char-show-wrapper'>
  <div class='char-show'>
    <img src='<%=@character.photo_url %>' alt='character' class='char-photo'>
  </div>
  <div class='char-show' class='quote'>
    "<%= @character.quote %>"
  </div>
  <div class='char-show'>
    House: <%= @character.house.name %>
  </div>
  <div class='char-show'>
    Weapon: <%= @character.primary_weapon %>
  </div>
  <div class='char-show'>
    Status: <%= @character.status %>
  </div>
  <%= link_to "Edit #{@character.name}", edit_character_path %>
</div>
