<h2>Edit House <%=@house.name %>, yo</h2>
<div id="edit-house-container">
  <%= form_for @house do |f| %>
  <div id='house-edit-form'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div id='house-edit-form'>
    <%= f.label :region %>
    <%= f.text_field :region %>
  </div>
  <div id='house-edit-form'>
    <%= f.label :seat_url %>
    <%= f.text_field :seat_url %>
  </div>
  <div id='house-edit-form'>
    <%= f.label "sigil photo URL" %>
    <%= f.text_field :sigil_url %>
  </div>
  <div id='house-edit-form'>
    <%= f.label :motto %>
    <%= f.text_field :motto %>
  </div>
  <div id='house-edit-form'>
    <%= f.radio_button(:great_house, true) %>
    <%= label_tag(:great_house, "Great House") %>
    <%= f.radio_button(:great_house, false) %>
    <%= label_tag(:great_house, "Nah") %>
  </div>
  <div id='house-edit-form'>
    <%= f.label :allegiance %>
    <%= f.text_field :allegiance %>
  </div>
  <div id='house-edit-form'>
    <%= f.submit %>
  </div>
</div>
<% end %>
