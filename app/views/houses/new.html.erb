<h2>add a house</h2>
<div class='edit-house-container'>
  <%= form_for @house do |f| %>
  <div class='house-edit-form'>
    <p><%= f.label :name %></p>
    <%= f.text_field :name %>
  </div>
  <div class='house-edit-form'>
    <p><%= f.label :region %></p>
    <%= f.text_field :region %>
  </div>
  <div class='house-edit-form'>
    <p><%= f.label :seat %></p>
    <%= f.text_field :seat %>
  </div>
  <div class='house-edit-form'>
    <p><%= f.label :seat_url %></p>
    <%= f.text_field :seat_url %>
  </div>
  <div class='house-edit-form'>
    <p><%= f.label :sigil_url %></p>
    <%= f.text_field :sigil_url %>
  </div>
  <div class='house-edit-form'>
    <p><%= f.label :motto %></p>
    <%= f.text_field :motto %>
  </div>
  <div class='house-edit-form'>
    <p><%= f.label :great_house %></p>
    <%= f.label :great_house, 'Yes', :value => 'true'  %>
    <%= f.radio_button :great_house, true %>
    <%= f.label :great_house, 'No', :value => 'false' %>
    <%= f.radio_button :great_house, false, :checked => true %>
  </div>
  <div class='house-edit-form'>
    <p><%= f.label :allegiance %></p>
    <%= f.text_field :allegiance %>
  </div>
  <div class='house-edit-form'>
    <%= f.submit %>
  </div>
  <% end %>
</div>
