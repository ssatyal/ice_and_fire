<h2>add a house, yo</h2>
<div id="edit-house-container">
  <%= form_for @house do |f| %>
  <div id="house-edit-form">
    <p><%= f.label :name %></p>
    <%= f.text_field :name %>
  </div>
  <div id="house-edit-form">
    <p><%= f.label :region %></p>
    <%= f.text_field :region %>
  </div>
  <div id="house-edit-form">
    <p><%= f.label :seat_url %></p>
    <%= f.text_field :seat_url %>
  </div>
  <div id="house-edit-form">
    <p><%= f.label "sigil photo URL" %></p>
    <%= f.text_field :sigil_url %>
  </div>
  <div id="house-edit-form">
    <p><%= f.label :motto %></p>
    <%= f.text_field :motto %>
  </div>
  <div id="house-edit-form">
    <p><%= f.label :great_house %></p>
    <%= f.label :great_house, "Yes", :value => "true"  %>
    <%= f.radio_button :great_house, true %>
    <%= f.label :great_house, "No", :value => "false" %>
    <%= f.radio_button :great_house, false, :checked => true %>
  </div>
  <div id="house-edit-form">
    <p><%= f.label :allegiance %></p>
    <%= f.text_field :allegiance %>
  </div>
  <div id="house-edit-form">
    <p><%= f.label :username %></p>
    <%= f.collection_select(:user_id, User.all, :id, :username) %>
  </div>
  <div id="house-edit-form">
    <%= f.submit %>
  </div>
  <% end %>
</div>
