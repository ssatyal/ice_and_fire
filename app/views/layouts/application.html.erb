<!DOCTYPE html>
<html>
<head>
  <title>Ice And Fire</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=MedievalSharp' rel='stylesheet' type='text/css'>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <nav>
    <div class="header">
      <div class='h1-div'>
        <h1>song of <span id='ice'>ice</span> and <span id='fire'>fire</span> wiki</h1>
      </div>
    </div>
    <ul>
      <div class='list-wrapper'>
        <div class="list-div"><li><%= link_to 'Houses', houses_path %></li></div>
        <div class="list-div"><li><%= link_to 'Characters', characters_path %></li></div>
        <% if !current_user %>
        <div class="list-div"><li><%= link_to "Sign Up", new_user_registration_path %></li></div>
        <div class="list-div"><li><%= link_to "Sign In", new_user_session_path %></li></div>
        <% else %>
        <div class="list-div"><li><%= link_to 'Add House', new_house_path %></li></div>
        <div class="list-div"><li><%= link_to 'Add Character', new_character_path %></li></div>
        <div class="list-div"><li><%=link_to "Sign Out #{current_user.email}", destroy_user_session_path, method: :delete%></li></div>
        <% end %>
      </div>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
