<!DOCTYPE html>
<html>
<head>
  <title>Ice And Fire</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=MedievalSharp' rel='stylesheet' type='text/css'>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div class='header'>
  <nav>
    <h1>song of ice and fire wiki</h1>
    <ul>
      <li><%= link_to 'Houses', houses_path %></li>
      <li><%= link_to 'Characters', characters_path %></li>
        <% if !current_user %>
      <li><%= link_to "Sign Up", new_user_registration_path %></li>
      <li><%= link_to "Sign In", new_user_session_path %></li>
        <% else %>
      <li><%= link_to 'Add House', new_house_path %></li>
      <li><%= link_to 'Add Character', new_character_path %></li>
      <li><%=link_to "Sign Out #{current_user.email}", destroy_user_session_path, method: :delete%></li>
        <% end %>
    </ul>
  </nav>
  </div>

  <%= yield %>

</body>
</html>
